<%= render 'composants/navbar' %>

<h1 class="d-flex justify-content-center headers-font p-5"><%= @character.name %></h1>

<div class="container d-flex flex-column align-items-center rounded" style="height: 600px;">
  <div class="gy-3 gx-5 row d-flex flex-row justify-content-between rounded card bg-info" style="height: 700px;">
    <div class="col-6">
      <p class="text-left"><%= link_to "< Retour à la liste", characters_path, style: "color: white; text-decoration: none; font-weight: bold;" %></p>
      <div class="rounded border-0">
        <%= cl_image_tag @character.photo.key, class: "card-img-top rounded-image" %>
      </div>
    </div>
    <div class="col-6 text-white">
      <%= simple_form_for [@character, @booking],data: { controller: "booking" } do |f| %>
      <div class="form-group">
        <%= f.input :start_date, label: "Date de début", as: :string, input_html: { class: "form-control", data: { controller: "datepicker"} } %>
      </div>
      <div class="form-group">
        <%= f.input :end_date, label: "Date de fin", as: :string, input_html: { class: "form-control", data: { controller: "datepicker"} } %>
      </div>
        <%= f.button :submit, 'Réserver', class: 'btn btn-primary text-white', data: { action: "click->booking#submit" } %>
      <% end %>
      <p class="card text-white bg-info p-3"><%= @character.description %></p>
    </div>
  </div>
</div>

<%= render 'composants/footer' %>
